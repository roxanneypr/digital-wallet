{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",                              
    "module": "esnext",                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    "allowSyntheticDefaultImports": true,
    "strict": true,                                    
    "skipLibCheck": true,                              
    "moduleResolution": "node"                         /* Add moduleResolution for better compatibility */
  },
  "include": ["src"]                                  /* Ensure your src directory is included for type checking */
}
